name: DataLoader
description: Load and split data into train and validation sets from file or URL
inputs:
- {name: data_path, type: CSV, optional: true, description: 'Path to input file'}
- {name: data_url, type: String, optional: true, description: 'URL to input data'}
- {name: val_size, type: Float, default: 0.2, description: 'Validation set size (between 0 and 1)'}
- {name: output_format, type: String, default: 'csv', description: 'Output format (csv/json/parquet)'}
outputs:
- {name: train_data, type: CSV, description: 'Path to train data file'}
- {name: val_data, type: CSV, description: 'Path to validation data file'} 
- {name: metadata, type: JSON, description: 'Path to metadata file'}
implementation:
  container:
    image: ravidocker189/data_loader:latest
    command: [python]
    args: [
      'src\dl_f.py',
      {ifPresent: {inputValue: data_path}, then: ['--data-path', {inputValue: data_path}]},
      {ifPresent: {inputValue: data_url}, then: ['--data-url', {inputValue: data_url}]},
      --val-size, {inputValue: val_size},
      --output-format, {inputValue: output_format},
      --_output_paths, {outputPath: train_data},
      {outputPath: val_data},
      {outputPath: metadata}
    ]
